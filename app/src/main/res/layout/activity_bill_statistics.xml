<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btn_filter_day"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textColor="#fff"
            android:layout_margin="8dp"
            android:background="@drawable/details_btn_style"
            android:text="按天过滤" />

        <Button
            android:id="@+id/btn_filter_month"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textColor="#fff"
            android:layout_margin="8dp"
            android:background="@drawable/details_btn_style"
            android:text="按月过滤" />

        <Button
            android:id="@+id/btn_filter_year"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textColor="#fff"
            android:layout_margin="8dp"
            android:background="@drawable/details_btn_style"
            android:text="按年过滤" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >
        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >
        <TextView
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:text="总支出"
            android:textColor="#000"
            android:textSize="22dp"
            />
            <TextView
                android:id="@+id/tv_out_money"
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:text="2000"
                android:textSize="18sp"
                android:textColor="#2153d6"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >
            <TextView
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:text="总收入"
                android:textColor="#000"
                android:textSize="22dp"
                />
            <TextView
                android:id="@+id/tv_in_money"
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:text="2000"
                android:textSize="18sp"
                android:textColor="#2153d6"
                />
        </LinearLayout>

    </LinearLayout>

    <com.example.pocketledger.view.SlideRecyclerView
        android:id="@+id/listview"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

</LinearLayout>
